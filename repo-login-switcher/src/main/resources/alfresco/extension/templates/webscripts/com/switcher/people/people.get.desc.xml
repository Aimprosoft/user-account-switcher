<webscript>
    <shortname>Get People</shortname>
    <description>
        Get a collection of people stored in the repository. This can optionally be
        filtered according to a given filter query string
    </description>
    <url>/api/switch-login/people?filter={filterQuery?}</url>
    <format default="json">argument</format>
    <authentication>admin</authentication>
    <transaction allow="readonly">required</transaction>
</webscript>